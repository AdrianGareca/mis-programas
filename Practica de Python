nota=int(input("dime tu nota"))
print("hola " + nombre + " tienes " + str(edad) + " anos de edad" + "y tu nota es: " + str(nota))

if nota<21:
    print("tonto")
elif nota<51:
    print("reprobado")
elif nota<81:
    print("aprobado")
elif nota<96:
    print("chichero")
else:
    print("chupa del profe")
    
